<!-- THE HAED -->
<%- include('partials/head', {title})%>
    <!-- THE NAV -->
    <%- include('partials/nav')%>
        <!-- THE BODY -->
        <div class="container">
            <h1 class="text-center py-3">
                <%= artistdetails[0].Artist_Name %>
            </h1>
            <!-- CAROUSEL -->
            <section>
                <div class="container py-3">
                    <div class="row align-items-center justify-content-center">
                        <div class="col-10 col-md-9 col-lg-8">
                            <div id="carouselExampleControls" class="carousel slide carousel-fade px-3 mx-3"
                                data-ride="carousel">
                                <div class="carousel-inner">
                                    <% for( let i=0; i < artistdetails.length; i++ ) { %>
                                        <% if (i===0) { %>
                                            <div class="carousel-item active">
                                                <img style="height: 100%; width: 100%;"
                                                    src="<%= artistdetails[i].Image_Url %>"
                                                    class="d-block carousel-images"
                                                    alt="<%= artistdetails[i].Artist_Name %> ">
                                            </div>
                                            <% } else { %>
                                                <div class="carousel-item">
                                                    <img style="height: 100%; width: 100%;"
                                                        src="<%= artistdetails[i].Image_Url %>"
                                                        class="d-block carousel-images"
                                                        alt="<%= artistdetails[i].Artist_Name %> ">
                                                </div>
                                                <% } %>
                                                    <% } %>

                                                        <button class="carousel-control-prev" type="button"
                                                            data-target="#carouselExampleControls" data-slide="prev">
                                                            <span class="carousel-control-prev-icon"
                                                                aria-hidden="true"></span>
                                                            <span class="sr-only">Previous</span>
                                                        </button>
                                                        <button class="carousel-control-next" type="button"
                                                            data-target="#carouselExampleControls" data-slide="next">
                                                            <span class="carousel-control-next-icon"
                                                                aria-hidden="true"></span>
                                                            <span class="sr-only">Next</span>
                                                        </button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </section>
        </div>
        <!-- END OF CAROUSEL -->
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-md-6 offset-sm-2 offset-md-3 text-center">
                    <p>
                    <ul style="list-style: none;">
                        <% artistdetails[0].Genre.forEach(g=> { %>
                            <li>
                                <%= g %>
                                    <% }) %>
                    </ul>
                    <p><b>Followers</b>
                        <%= artistdetails[0].Fllowers %>
                            <br>
                            Find
                            <a target="_blank" href="<%= artistdetails[0].Artist_Url %> ">
                                <%= artistdetails[0].Artist_Name%>
                            </a> On Spotify.
                </div>
            </div>
            <h2>Albums by <%= artistdetails[0].Artist_Name%>
            </h2>
            <div class="row">

                <% for( let i=0; i < artistdetails.length; i++ ) { %>
                    <div class="col-sm-6 col-md-4">
                        <div class="card bg-transparent border-0">
                            <a target="_blank" href="/albums/<%= artistdetails[i].Album_ID %> "> <img
                                    class=" card-img-top" src="<%= artistdetails[i].Image_Url %>"
                                    alt="Card image cap"></a>
                            <div class="card-body">
                                <!-- <h5 class="card-title">
                                    <%= artistdetails[i].Song_Name %>
                                </h5> -->
                                <p class="card-text">
                                    <%= artistdetails[i].Name %><br>
                                        <span>Released:
                                            <%= artistdetails[i].Release_Date %>
                                </p>
                                <a target="_blank" href="/albums/<%= artistdetails[i].Album_ID %> ">See
                                    Songs</a><br>
                                <a target="_blank" href="<%= artistdetails[i].Spotify_Url %> ">Listen on Spotify</a>
                            </div>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>

        <!-- THE FOOTER -->
        <%- include('partials/footer')%>